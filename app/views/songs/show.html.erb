<%= render partial: "shared/nav_bar", locals: {user: @user} %>
<h1><%= @song.title %></h1>
<h3>Details</h3>
<p>Artist: <%= @song.album.artist.full_name %> <%= link_to "View", @song.album.artist %></p>
<p>Album: <%= @song.album.title %> <%= link_to "View", @song.album %></p>
<p>Title: <%= @song.title %></p>
<p>Track #: <%= @song.track_number %></p>
<%= link_to "Edit", edit_song_path(@song) %> <%= link_to "Delete", @song, method: "delete", data: {confirm: "Are you sure you want to remove this song from your collection?"} %>
